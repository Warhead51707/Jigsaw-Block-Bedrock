{
    "format_version": "1.20.60",
    "minecraft:block": {
        "description": {
            "identifier": "jigsaw:jigsaw_block",
            "states": {
                "jigsaw:orientation": [
                    "icon_setup", // Used for the icon
                    "north_up",
                    "south_up",
                    "west_up",
                    "east_up", // Horizontal
                    "up_north",
                    "up_south",
                    "up_west",
                    "up_east", // Vertical - Top Face
                    "down_north",
                    "down_south",
                    "down_west",
                    "down_east" // Vertical - Bottom Face
                ]
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [
                        "minecraft:cardinal_direction",
                        "minecraft:facing_direction"
                    ],
                    "y_rotation_offset": 180
                }
            }
        },
        "components": {
            "minecraft:destructible_by_mining": false,
            "minecraft:destructible_by_explosion": false,
            "minecraft:geometry": "geometry.block",
            "minecraft:material_instances": {
                "*": {
                    "texture": "jigsaw"
                }
            },
            "minecraft:on_player_placing": {
                "event": "jigsaw:set_orientation",
                "target": "self"
            },
            "minecraft:on_interact": {
                "event": "jigsaw:empty",
                "target": "self",
                "condition": "!query.is_sneaking"
            }
        },
        "permutations": [
            {
                "condition": "q.block_state('jigsaw:orientation') == 'icon_setup'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'north_up'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'south_up'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'west_up'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'east_up'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            0,
                            -90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'up_north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'up_south'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'up_west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            90,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'up_east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            90,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'down_north'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            -90,
                            180,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'down_south'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            -90,
                            0,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'down_west'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            -90,
                            270,
                            0
                        ]
                    }
                }
            },
            {
                "condition": "q.block_state('jigsaw:orientation') == 'down_east'",
                "components": {
                    "minecraft:transformation": {
                        "rotation": [
                            -90,
                            90,
                            0
                        ]
                    }
                }
            }
        ],
        "events": {
            "jigsaw:empty": {
                "swing": {}
            },
            "jigsaw:set_orientation": {
                "sequence": [
                    {
                        "condition": "query.block_face == 1 && query.cardinal_facing_2d == 2",
                        "set_block_state": {
                            "jigsaw:orientation": "'up_north'"
                        }
                    },
                    {
                        "condition": "query.block_face == 1 && query.cardinal_facing_2d == 3",
                        "set_block_state": {
                            "jigsaw:orientation": "'up_south'"
                        }
                    },
                    {
                        "condition": "query.block_face == 1 && query.cardinal_facing_2d == 4",
                        "set_block_state": {
                            "jigsaw:orientation": "'up_west'"
                        }
                    },
                    {
                        "condition": "query.block_face == 1 && query.cardinal_facing_2d == 5",
                        "set_block_state": {
                            "jigsaw:orientation": "'up_east'"
                        }
                    },
                    {
                        "condition": "query.block_face == 0 && query.cardinal_facing_2d == 2",
                        "set_block_state": {
                            "jigsaw:orientation": "'down_north'"
                        }
                    },
                    {
                        "condition": "query.block_face == 0 && query.cardinal_facing_2d == 3",
                        "set_block_state": {
                            "jigsaw:orientation": "'down_south'"
                        }
                    },
                    {
                        "condition": "query.block_face == 0 && query.cardinal_facing_2d == 4",
                        "set_block_state": {
                            "jigsaw:orientation": "'down_west'"
                        }
                    },
                    {
                        "condition": "query.block_face == 0 && query.cardinal_facing_2d == 5",
                        "set_block_state": {
                            "jigsaw:orientation": "'down_east'"
                        }
                    },
                    {
                        "condition": "query.block_face == 2",
                        "set_block_state": {
                            "jigsaw:orientation": "'north_up'"
                        }
                    },
                    {
                        "condition": "query.block_face == 3",
                        "set_block_state": {
                            "jigsaw:orientation": "'south_up'"
                        }
                    },
                    {
                        "condition": "query.block_face == 4",
                        "set_block_state": {
                            "jigsaw:orientation": "'west_up'"
                        }
                    },
                    {
                        "condition": "query.block_face == 5",
                        "set_block_state": {
                            "jigsaw:orientation": "'east_up'"
                        }
                    }
                ]
            }
        }
    }
}